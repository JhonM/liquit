<form {{action "save" on="submit"}}>
  <div>
    <label>
      Name
      {{input type="text" value=model.name}}
    </label>
  </div>
  <div>
    <label>
      Vendor
      {{input type="text" value=model.vendor}}
    </label>
  </div>
  <div>
    <label>
      Price
      {{input type="text" value=model.price}}
    </label>
  </div>
  <div>
    <label>
      Amount
      {{input type="text" value=model.amount}}
    </label>
  </div>
  <div>
    <input type="submit" value="Save">
  </div>
</form>
