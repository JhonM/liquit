<form {{action "save" on="submit"}}>
	<div class="row">
		<div class="medium-12 columns">
			<label>
      		Name
     		{{input type="text" value=model.name}}
    		</label>
		</div>
	</div>
	<div class="row">
		<div class="medium-12 columns">
			<label>
		   Brew Date
		   {{input type="date" value=model.brewDAte}}
		   </label>
		</div>
	</div>
	<div class="row">
		<div class="medium-12 columns">
			<label>
		Description
		 {{input type="text" value=model.description}}
		 </label>
		</div>
	</div>
	<div class="row">
		<div class="medium-12 columns">
			<label>
		 Steep time
		 {{input type="number" value=model.steepTime}}
		 </label>
		</div>
	</div>
	<div class="row">
		<div class="medium-12 columns">
			<label>
		 Brew Plan
		 {{input type="text" value=newRecipe.brewPlan}}
		 </label>
		</div>
	</div>
	<div class="row small-up-1 medium-up-2 large-up-6">
		{{#each model.aromas as |aroma|}}
			{{#aroma-component title="aroma.title"}}
				{{aroma.description}}
			{{/aroma-component}}
		{{/each}}
	</div>
	<div class="row">
		<div class="medium-12 columns">
			<button type="submit" class="success button" value="Save">Save</button>
			{{#link-to "recipes.index" class="alert button" }}Cancel{{/link-to}}
		</div>
	</div>
</form>
