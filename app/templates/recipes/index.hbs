{{header-navigation}}
<div class="row">
	<div class="small-12 columns">
		<h1>Recipes list</h1>
	</div>
</div>
<div class="row">
	<div class="small-12 columns">
		<p>
			{{link-to "New Recipe" "recipes.new" }}
		</p>
	</div>
</div>
<div class="row">
	<div class="small-12 columns">
		{{#if model.length}}
			<table>
				<thead>
					<tr>
						<th>
							Name
						</th>
						<th>
							Ingredient
						</th>
						<th colspan="3">
							Actions
						</th>
					</tr>
				</thead>
				<tbody>
					{{#each model as |recipe|}}
						<tr>
							<td>
								{{recipe.name}}
							</td>
							<td>
								{{recipe.ingredient}}
							</td>
							<td>
								{{link-to "Edit" "recipes.edit" recipe}}
							</td>
							<td>
								{{link-to "Show" "recipes.show" recipe}}
							</td>
							<td>
								<a href="#" {{action "remove" recipe}}>Remove</a>
							</td>
						</tr>
					{{/each}}
				</tbody>
			</table>
		{{else}}
			<p id="blankslate">
				No Recipes found
			</p>
		{{/if}}

	</div>
</div>
